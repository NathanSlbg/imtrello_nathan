<!doctype html>
<html lang="fr">

  <head>
    <meta charset="utf-8">
    <!-- Mise à l'echelle pour les navigateurs mobiles -->
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Importe la fonte LATO -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Lato:ital,wght@0,100;0,300;0,400;0,700;0,900;1,100;1,300;1,400;1,700;1,900&display=swap" rel="stylesheet">

    <!-- CSS de Bootstrap -->
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="../static/css/welcome.css">

    <title>Bienvenue sur IMTrello</title>
  </head>

  <body>
    <!-- Votre contenu -->
    <div class="main">
      <div class="carte" id="carte-bienvenue">
        <div id="bienvenue-gauche">
          <div class="imtrello-title">
            IMTrello
          </div>
          <div class="imtrello-subtitle">
            Un espace pour tous vos projets à IMT Atlantique
          </div>
        </div>
        <div id="bienvenue-droite">
          <form action="{{ url_for("display_login_page") }}" method="get">
            <button class="login-button">
            Log In
            </button>
          </form>
          <div>
            <div class="register-text">
              Pas encore inscrit ?
            </div>
            <form action="{{ url_for("display_register_page") }}" method="get">
              <button class="register-button">
                Créez votre compte
              </button>
            </form>
          </div>
        </div>
      </div>
    </div>
    <!-- Fichiers Javascript nécessaires pour certains composants Bootstrap -->
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>

  </body>
</html>

