<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Projects</title>
    <link rel="stylesheet" href="{{ url_for('static', filename='styles.css') }}">
</head>
<body>
<h1>MES PROJETS</h1>


<form action="{{ url_for("display_add_project") }}" method="get">
    <button>
        Add Project
    </button>
</form>
<div class="container">
        <div class="project-list">
            {% if projects %}
                {% for project in projects %}
                    <div class="project">
                        <a href="{{ url_for('display_project_details', project_id=project.id) }}"><h2>{{ project.project_name }}</h2></a>
                        <p class="description">{{ project.description }}</p>
                        <p class="deadline">Deadline: {{ project.deadline }}</p>
                    </div>
                {% endfor %}
            {% else %}
                <p>No projects found.</p>
            {% endif %}
        </div>
<form action="{{ url_for("logout_function") }}" method="get">
            <p><input type="submit" value="Log out"></p>
        </form>
</div>
</body>
