<!doctype html>
<html lang="fr">

  <head>
    <meta charset="utf-8">
    <!-- Mise à l'echelle pour les navigateurs mobiles -->
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Importe la fonte LATO -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Lato:ital,wght@0,100;0,300;0,400;0,700;0,900;1,100;1,300;1,400;1,700;1,900&display=swap" rel="stylesheet">

    <!-- CSS de Bootstrap -->
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="../static/css/login.css">

    <head>
        <title>Register</title>
    </head>
    <body>
        <div class="main">
                <form action="{{ url_for("register_function") }}" method="post">
                    <div class="carte" id="carte-login">
                    <div class="imtrello-subtitle">Création compte IMTrello</div>
                    <p><input type="text" name="first_name" class="champ-texte" placeholder="Prénom" required></p>
                    <p><input type="text" name="last_name" class="champ-texte" placeholder="Nom" required></p>
                    <p><input type="email" name="email" class="champ-texte" placeholder="Email" required></p>
                    <p><input type="text" name="username" class="champ-texte" placeholder="identifiant" required></p>
                    <p><input type="password" name="password" class="champ-texte" placeholder="Mot de passe" required></p>
                    <p><input type="password" name="password_confirm" class="champ-texte" placeholder="Confirmation mot de passe" required></p>
                    <p><input type="submit" value="Register" class="login-button"></p>
                    </div>
                </form>
        </div>
    </body>
</html>